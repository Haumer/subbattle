<div class="container">
  <%= link_to start_path(@battle) do %>
    Start
  <% end %>

  <% if @matches.present? %>
    <div class="matches">
      <% @matches.each do |match| %>
        <div class="battle-match">
          <div class="home-team-player player-card <%= status_tags(match, "home") %>">
            <%= link_to "winner", declare_winner_path(id: match.id, winner: "home"), method: :post %>
            <%= match.home_member.rating %> <%= match.home_member.username %>
          </div>
          <span class="versus">
            vs
          </span>
          <div class="away-team-player player-card <%= status_tags(match, "away") %>">
            <%= match.away_member.username %> <%= match.away_member.rating %> <%= link_to "winner", declare_winner_path(id: match.id, winner: "away"), method: :post %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <%= @battle.home_team.name %> vs <%= @battle.away_team.name %>
  <table>
    <% @home_team_members.each_with_index do |member, index| %>
      <tr>
        <td><%= index + 1 %><%= member.email %> <%= member.rating %></td>
      </tr>
    <% end %>
  </table>
  <br>
  <table>
    <% @away_team_members.each_with_index do |member, index| %>
      <tr>
        <td><%= index + 1 %><%= member.email %> <%= member.rating %></td>
      </tr>
    <% end %>
  </table>
  <% end %>

</div>

